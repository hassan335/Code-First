@model Khuari.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers", "post"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.customer.C_Name)
        @Html.TextBoxFor(x => x.customer.C_Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.customer.DOB)
        @Html.TextBoxFor(x => x.customer.DOB,"{0:d MMM yyy}",new { @class = "form-control" })
    </div>

   

    <div class="form-group">
        @Html.LabelFor(x => x.customer.MembershipTypeId)
        @Html.DropDownListFor(x => x.customer.MembershipTypeId, new SelectList(Model.MembershipType, "Id", "Name"), "Select Membsership Type", new { @class = "form-control" })
    </div>
    <div>
        <label>
            @Html.CheckBoxFor(x => x.customer.IsSubscribedToNewsLetter) Subscribed to news letter
        </label>
    </div>
    @Html.HiddenFor(x=>x.customer.C_Id)
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>

    </div>



}

